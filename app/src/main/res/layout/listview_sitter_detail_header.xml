<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:orientation="vertical"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imageview_housework"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_housework"/>
                <TextView
                    android:id="@+id/textview_housework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가사"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/imageview_play"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_play"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/textview_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="놀이"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/imageview_study"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_study"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/textview_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학습"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/imageview_heart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_heart"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/textview_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산후"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/imageview_language"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/icon_language"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/textview_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="외국어"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나이"
                            android:textSize="13dp"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/textview_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00세"
                            android:textSize="13dp"
                            android:layout_marginLeft="15dp"
                            android:layout_toEndOf="@+id/text_age"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/text_hourlywage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시급"
                            android:textSize="13dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/textview_hourlywage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00000원"
                            android:textSize="13dp"
                            android:layout_toEndOf="@+id/text_hourlywage"
                            android:layout_marginLeft="15dp"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_career"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="경력"
                            android:textSize="13dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/textview_career"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00년"
                            android:textSize="13dp"
                            android:layout_toEndOf="@+id/text_career"
                            android:layout_marginLeft="15dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/text_similar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="유사도"
                            android:textSize="13dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/textview_similar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00년"
                            android:textSize="13dp"
                            android:layout_toEndOf="@+id/text_similar"
                            android:layout_marginLeft="15dp"/>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#efefef"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자기소개"
            android:textSize="13dp"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:paddingLeft="35dp"
            android:paddingBottom="15dp"/>
        <TextView
            android:id="@+id/textview_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingBottom="20dp"
            android:lineSpacingExtra="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#efefef"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어필"
            android:textSize="13dp"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:paddingLeft="35dp"
            android:paddingBottom="15dp"/>
        <TextView
            android:id="@+id/textview_appeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingBottom="20dp"
            android:lineSpacingExtra="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#efefef"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="후기"
            android:textSize="13dp"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:paddingLeft="35dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>

</LinearLayout>