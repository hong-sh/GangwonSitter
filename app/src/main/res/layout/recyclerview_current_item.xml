<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/layout_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <com.example.yeah1.sitter.util.CircularProgressBar
                android:id="@+id/progressbar_percent"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="35dp"/>

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍성학님"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/progressbar_percent"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imageview_housework"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_housework"/>
                <TextView
                    android:id="@+id/textview_housework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가사"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/imageview_play"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_play"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/textview_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="놀이"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/imageview_study"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_study"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/textview_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학습"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/imageview_heart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_heart"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/textview_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산후"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/imageview_language"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/icon_language"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/textview_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="외국어"
                    android:textSize="13dp"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나이"
                            android:textSize="13dp"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/textview_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00세"
                            android:textSize="13dp"
                            android:layout_marginLeft="15dp"
                            android:layout_toEndOf="@+id/text_age"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/text_hourlywage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시급"
                            android:textSize="13dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/textview_hourlywage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00000원"
                            android:textSize="13dp"
                            android:layout_toEndOf="@+id/text_hourlywage"
                            android:layout_marginLeft="15dp"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_career"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="경력"
                            android:textSize="13dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/textview_career"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00년"
                            android:textSize="13dp"
                            android:layout_toEndOf="@+id/text_career"
                            android:layout_marginLeft="15dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/text_similar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="유사도"
                            android:textSize="13dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/textview_similar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00년"
                            android:textSize="13dp"
                            android:layout_toEndOf="@+id/text_similar"
                            android:layout_marginLeft="15dp"/>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#afafaf"/>

    </LinearLayout>


</RelativeLayout>
